                            <div id="menu-1-rb">
                                <a href="" class="menu-1"><img src="{{ asset('assets/pictures/HEADER/pictopays.png') }}"/></a>
                            </div>
                        </div>

                        <div id="menu-2">
                            <div id="menu-2-l">
                            </div>
                            <div id="menu-2-r">
